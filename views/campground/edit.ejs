<%-include("../partials/header.ejs")%>
<div class="container " style="margin-top: 100px;">
    <div class="row">
        <div class="col-sm-12 text-center">
            <h1>Edit <%=campground.name%></h1>
            <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[name]" placeholder="name" value="<%=campground.name%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[image]" placeholder="image-url" value="<%=campground.image%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[description]" placeholder="add description" value="<%=campground.description%>"></input>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-info btn-block">Submit!</button>
                </div>
                
            </form>
            <a href="/campgrounds">Go back...</a>
        </div>        
    </div>
</div>
<%-include("../partials/footer.ejs")%>